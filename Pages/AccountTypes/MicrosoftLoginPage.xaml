<ui:Page x:Class="LMC.Pages.AccountTypes.MicrosoftLoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
      xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
      xmlns:local="clr-namespace:LMC.Pages.AccountTypes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="添加账号">
    <ScrollViewer>
        <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="30">
            <TextBlock Text="接下来会跳转到微软的登录界面，请在其中登录并授权LMC访问您的账号以完成登录操作。" TextWrapping="Wrap" FontSize="20" TextAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,50"/>
            <ikw:SimpleStackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Spacing="30">
                <Button VerticalAlignment="Bottom" Content="上一步" Click="Button_Click"/>
                <Button VerticalAlignment="Bottom" Content="打开网页" Click="Button_Click_1"/>
            </ikw:SimpleStackPanel>
        </Grid>
    </ScrollViewer>
</ui:Page>
