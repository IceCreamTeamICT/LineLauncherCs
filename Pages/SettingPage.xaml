        <Label VerticalAlignment="Top" HorizontalAlignment="Left" Margin="40,151,0,0"  Content="安全设置" FontSize="20"/>
        <Button Content="导出隐私文件" Margin="40,205,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>
